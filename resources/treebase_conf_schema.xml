<?xml version="1.0" encoding="iso-8859-2"?>
<pml_schema 
    xmlns="http://ufal.mff.cuni.cz/pdt/pml/schema/" version="1.1">
  <revision>1.1</revision>
  <root name="pmltq_config">
    <structure>
      <member name="limit"><cdata format="nonNegativeInteger"/></member>
      <member name="row_limit"><cdata format="nonNegativeInteger"/></member>
      <member name="timeout"><cdata format="nonNegativeInteger"/></member>
      <member name="configurations">
	<sequence>
	  <element name="dbi" type="dbi-config.type"/>
	  <element name="http" type="http-config.type"/>
	</sequence>
      </member>
    </structure>
  </root>
  <type name="dbi-config.type">
    <structure>
      <member name="id" role="#ID" required="1" as_attribute="1"><cdata format="ID"/></member>
      <member name="driver"><cdata format="NMTOKEN"/></member>
      <member name="host"><cdata format="anyURI"/></member>
      <member name="port"><cdata format="integer"/></member>
      <member name="database"><cdata format="NMTOKEN"/></member>
      <member name="username"><cdata format="NMTOKEN"/></member>
      <member name="password"><cdata format="any"/></member>
      <member name="sources">
	<alt>
	  <container>
	    <attribute name="schema"><cdata format="NMTOKEN"/></attribute>
	    <cdata format="anyURI"/>
	  </container>
	</alt>
      </member>
      <member name="environment">
        <list ordered="0">
	  <container>
	    <attribute name="name" required="1">
	      <cdata format="NMTOKEN"/>
	    </attribute>
	    <cdata format="any"/>
	  </container>
	</list>
      </member>
    </structure>
  </type>
  <type name="http-config.type">
    <structure>
      <member name="id" role="#ID" required="1" as_attribute="1"><cdata format="ID"/></member>
      <member name="url"><cdata format="anyURI"/></member>
      <member name="username"><cdata format="NMTOKEN"/></member>
      <member name="password"><cdata format="any"/></member>
      <member name="cached_description">
	<structure>
	  <member name="title" required="1">
	    <cdata format="any"/>
	  </member>
	  <member name="abstract">
	    <cdata format="any"/>
	  </member>	  
	  <member name="moreinfo" as_attribute="1">
	    <cdata format="anyURI"/>
	  </member>
	</structure>
      </member>
    </structure>
  </type>
</pml_schema>
